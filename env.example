# ============= Development (Supabase) =============
# Kalau pakai Supabase untuk development:
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============= Production / Vercel (PostgreSQL) =============
# Set di Vercel: Project Settings → Environment Variables
# Opsi 1: Satu variable (disarankan)
DATABASE_URL=postgresql://user:password@host:port/database

# Opsi 2: Per komponen (password pakai encode URL kalau ada karakter khusus, mis. % → %25)
# DB_HOST=115.124.72.218
# DB_PORT=9999
# DB_USER=creativo


# ============= Better Auth =============
BETTER_AUTH_SECRET=REPLACE_WITH_SECURE_RANDOM
BETTER_AUTH_URL=https://your-app.vercel.app

# ============= Admin =============
ADMIN_EMAIL=admin@skinlab.com
ADMIN_PASSWORD=admin123
